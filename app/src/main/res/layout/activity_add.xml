<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff8d4"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    tools:context=".AddActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#1a2646" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <!-- Title Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vesperlibre_bold"
                android:text="PantryPal"
                android:textAlignment="center"
                android:textColor="#313647"
                android:textSize="50dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/vesperlibre_bold"
                android:text="Add Item"
                android:textAlignment="center"
                android:textColor="#435663"
                android:textSize="25dp" />

            <!-- Item Name Section -->
            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edittext_box"
                android:fontFamily="@font/montserrat_semibold"
                android:hint="Name"
                android:inputType="textCapWords"
                android:padding="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Quantity Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Quantity"
                        android:textColor="#435663"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_box"
                        android:fontFamily="@font/montserrat_semibold"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:padding="10dp" />

                </LinearLayout>

                <!-- Unit Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Unit"
                        android:textColor="#435663"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinnerUnit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_box"
                        android:entries="@array/unit_types"
                        android:fontFamily="@font/montserrat_semibold"
                        android:padding="10dp" />

                </LinearLayout>

                <!-- Purchase Date Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Purchase Date"
                        android:textColor="#435663"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/containerPurchaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_box"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvPurchaseDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Today"
                            android:textColor="#313647" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#313647"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Expiry Date Section -->
                <TextView
                    android:id="@+id/lblExpiryHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Expiry Date Options"
                    android:textColor="#435663"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgExpiryOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Expiry Option: Days from Now -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbDaysFromNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Days from Now"
                            android:textColor="#313647"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/etDaysFromNow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_box"
                            android:enabled="true"
                            android:gravity="end"
                            android:fontFamily="@font/montserrat_semibold"
                            android:hint="0"
                            android:inputType="number"
                            android:minWidth="80dp"
                            android:padding="10dp"
                            android:textColor="#313647"
                            android:textColorHint="#435663" />
                    </LinearLayout>

                    <!-- Expiry Option: Specific Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbExpiryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Date"
                            android:textColor="#313647"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/containerExpiryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_box"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:minWidth="150dp"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvExpiryDateValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Today"
                                android:textColor="#313647" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="#313647"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Footer Action Button -->
    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pp_button"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Add to Checklist"
        android:textAllCaps="false"
        android:textColor="#fff8d4"
        android:textSize="20dp" />

</LinearLayout>